@model IEnumerable<EventEase_Final.Models.Booking>

@{
    ViewData["Title"] = "Bookings Index";
}

<h2>Bookings</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle me-1"></i> Create New Booking
    </a>
    <a asp-action="Search" class="btn btn-success">
        <i class="fas fa-search me-1"></i> Search Bookings & Check Availability
    </a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Booking ID</th>
            <th>Date(s)</th>
            <th>Venue</th>
            <th>Event</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Booking_ID</td>
            <td>
                @if (item.StartDate == item.EndDate)
                {
                    @item.StartDate.ToDateTime(TimeOnly.MinValue).ToString("dd MMM yyyy")
                }
                else
                {
                    @item.StartDate.ToDateTime(TimeOnly.MinValue).ToString("dd MMM yyyy") @:– @item.EndDate.ToDateTime(TimeOnly.MinValue).ToString("dd MMM yyyy")
                }
            </td>
            <td>
                <strong>@item.Venue?.VenueName</strong><br />
                <small class="text-muted">@item.Venue?.VenueLocation</small>
            </td>
            <td>
                <strong>@item.Event?.EventName</strong><br />
                <small class="text-muted">@(item.Event?.EventDate?.ToDateTime(TimeOnly.MinValue).ToString("dd MMM yyyy") ?? "No date")</small>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Booking_ID" class="btn btn-sm btn-info">
                    <i class="fas fa-eye"></i> View
                </a>
                <a asp-action="Edit" asp-route-id="@item.Booking_ID" class="btn btn-sm btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@item.Booking_ID" class="btn btn-sm btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>