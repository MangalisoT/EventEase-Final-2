@model EventEase_Final.Models.BookingsViewModel

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5">
    <h2 class="mb-4">Search Bookings</h2>

    <form asp-controller="Bookings" asp-action="Search" method="post">
        <div class="row mb-3">
            <!-- Booking Date -->
            <div class="col-md-4">
                <label asp-for="BookingDate" class="form-label">Booking Date</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    <input asp-for="BookingDate" type="date" class="form-control" placeholder="Select a date" />
                </div>
            </div>

            <!-- Venue ID -->
            <div class="col-md-4">
                <label asp-for="Venue_ID" class="form-label">Venue ID</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                    <input asp-for="Venue_ID" class="form-control" placeholder="Enter Venue ID" />
                </div>
            </div>

            <!-- Event ID -->
            <div class="col-md-4">
                <label asp-for="Event_ID" class="form-label">Event ID</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-ticket-alt"></i></span>
                    <input asp-for="Event_ID" class="form-control" placeholder="Enter Event ID" />
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-search me-2"></i>Search
            </button>
        </div>
    </form>

    <!-- Search Results -->
    @if (Model.Bookings != null && Model.Bookings.Any())
    {
        <h3 class="mt-5">Search Results</h3>
        <table class="table table-bordered table-striped mt-3">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Date</th>
                    <th>Venue</th>
                    <th>Event</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr>
                        <td>@booking.Booking_ID</td>
                        <td>@booking.BookingDate</td>
                        <td>@booking.Venue_ID</td>
                        <td>@booking.Venue_ID</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.Bookings != null)
    {
        <p class="mt-4 text-warning">No bookings found matching the search criteria.</p>
    }
</div>
