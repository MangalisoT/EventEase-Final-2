@model EventEase_Final.Models.BookingsViewModel

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5">
    <h2 class="mb-4">
        <i class="fas fa-search me-2"></i>Search Bookings & Venue Availability
    </h2>

    <!-- Search Type Toggle -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group" role="group" aria-label="Search Type">
                <input type="radio" class="btn-check" name="searchTypeRadio" id="bookingsRadio" value="bookings" checked>
                <label class="btn btn-outline-primary" for="bookingsRadio">
                    <i class="fas fa-calendar-check me-2"></i>Search Bookings
                </label>

                <input type="radio" class="btn-check" name="searchTypeRadio" id="availabilityRadio" value="availability">
                <label class="btn btn-outline-success" for="availabilityRadio">
                    <i class="fas fa-calendar-days me-2"></i>Check Venue Availability
                </label>
            </div>
        </div>
    </div>

    <form asp-controller="Bookings" asp-action="Search" method="post" id="searchForm">
        <input asp-for="SearchType" type="hidden" id="searchTypeInput" value="bookings" />

        <!-- Bookings Search Section -->
        <div id="bookingsSearch" class="search-section">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-check me-2"></i>Search Existing Bookings</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <!-- Booking Date -->
                        <div class="col-md-3">
                            <label asp-for="BookingDate" class="form-label">Booking Date</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="BookingDate" type="date" class="form-control" />
                            </div>
                        </div>

                        <!-- Venue -->
                        <div class="col-md-3">
                            <label asp-for="Venue_ID" class="form-label">Venue</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <select asp-for="Venue_ID" class="form-select" asp-items="ViewBag.Venues">
                                    <option value="">-- Select Venue --</option>
                                </select>
                            </div>
                        </div>

                        <!-- Event -->
                        <div class="col-md-3">
                            <label asp-for="Event_ID" class="form-label">Event</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-ticket-alt"></i></span>
                                <select asp-for="Event_ID" class="form-select" asp-items="ViewBag.Events">
                                    <option value="">-- Select Event --</option>
                                </select>
                            </div>
                        </div>

                        <!-- Event Type -->
                        <div class="col-md-3">
                            <label asp-for="EventType_ID" class="form-label">Event Type</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tags"></i></span>
                                <select asp-for="EventType_ID" class="form-select" asp-items="ViewBag.EventTypes">
                                    <option value="">-- Select Event Type --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Availability Search Section -->
        <div id="availabilitySearch" class="search-section" style="display: none;">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-days me-2"></i>Check Venue Availability</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Find which venues are available during a specific date range. Perfect for when a client calls asking about venue availability for their event.
                    </div>
                    <div class="row mb-3">
                        <!-- Start Date -->
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label">Start Date <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-plus"></i></span>
                                <input asp-for="StartDate" type="date" class="form-control" required />
                            </div>
                        </div>

                        <!-- End Date -->
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label">End Date <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-minus"></i></span>
                                <input asp-for="EndDate" type="date" class="form-control" required />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mb-4">
            <button type="submit" class="btn btn-primary btn-lg px-5">
                <i class="fas fa-search me-2"></i><span id="searchButtonText">Search Bookings</span>
            </button>
        </div>
    </form>

    <!-- Search Results for Bookings -->
    @if (Model.SearchType == "bookings" && Model.Bookings != null && Model.Bookings.Any())
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-list me-2"></i>Booking Search Results</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-hashtag me-1"></i>Booking ID</th>
                                <th><i class="fas fa-calendar me-1"></i>Date</th>
                                <th><i class="fas fa-map-marker-alt me-1"></i>Venue</th>
                                <th><i class="fas fa-ticket-alt me-1"></i>Event</th>
                                <th><i class="fas fa-tags me-1"></i>Event Type</th>
                                <th><i class="fas fa-users me-1"></i>Capacity</th>
                                <th><i class="fas fa-cog me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model.Bookings)
                            {
                                <tr>
                                    <td>@booking.Booking_ID</td>
                                    <td>@booking.StartDate.ToString("dd MMM yyyy") - @booking.EndDate.ToString("dd MMM yyyy")
                                    </td>
                                    <td>
                                        <strong>@booking.Venue?.VenueName</strong><br>
                                        <small class="text-muted">@booking.Venue?.VenueLocation</small>
                                    </td>
                                    <td>@booking.Event?.EventName</td>
                                    <td>
                                        <span class="badge bg-secondary">@booking.Event?.EventType?.TypeName</span>
                                    </td>
                                    <td>@booking.Venue?.VenueCapacity</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@booking.Booking_ID" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@booking.Booking_ID" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (Model.SearchType == "bookings" && Model.Bookings != null && !Model.Bookings.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            No bookings found matching the search criteria.
        </div>
    }

    <!-- Search Results for Availability -->
    @if (Model.SearchType == "availability" && Model.AvailableVenues != null && Model.AvailableVenues.Any())
    {
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-calendar-check me-2"></i>
                    Venue Availability: @Model.StartDate?.ToString("dd MMM yyyy") - @Model.EndDate?.ToString("dd MMM yyyy")
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var venue in Model.AvailableVenues.OrderByDescending(v => v.AvailableDaysCount))
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 @(venue.IsCompletelyAvailable ? "border-success" : venue.AvailableDaysCount > 0 ? "border-warning" : "border-danger")">
                                @if (!string.IsNullOrEmpty(venue.VenueImage))
                                {
                                    <img src="@venue.VenueImage" class="card-img-top" alt="@venue.VenueName" style="height: 200px; object-fit: cover;">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-map-marker-alt me-2"></i>@venue.VenueName
                                    </h5>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="fas fa-location-dot me-1"></i>@venue.VenueLocation<br>
                                            <i class="fas fa-users me-1"></i>Capacity: @venue.VenueCapacity
                                        </small>
                                    </p>

                                    <div class="availability-status mb-3">
                                        @if (venue.IsCompletelyAvailable)
                                        {
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-check-circle me-1"></i>Completely Available
                                            </span>
                                        }
                                        else if (venue.AvailableDaysCount > 0)
                                        {
                                            <span class="badge bg-warning fs-6">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Partially Available
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger fs-6">
                                                <i class="fas fa-times-circle me-1"></i>Fully Booked
                                            </span>
                                        }
                                    </div>

                                    <div class="availability-details">
                                        <small class="text-muted">
                                            <strong>@venue.AvailableDaysCount</strong> of <strong>@venue.TotalDaysInRange</strong> days available
                                        </small>

                                        @if (venue.BookedDates.Any())
                                        {
                                            <div class="mt-2">
                                                <small class="text-danger">
                                                    <strong>Booked dates:</strong><br>
                                                    @string.Join(", ", venue.BookedDates.Select(d => d.ToString("dd MMM")).Take(3))
                                                    @if (venue.BookedDates.Count > 3)
                                                    {
                                                        <span> and @(venue.BookedDates.Count - 3) more...</span>
                                                    }
                                                </small>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="@Url.Action("Create", "Bookings", new { venueId = venue.VenueId })" class="btn btn-primary btn-sm">
                                        <i class="fas fa-plus-circle me-1"></i>Book This Venue
                                    </a>
                                    <a href="@Url.Action("Details", "Venues", new { id = venue.VenueId })" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-info-circle me-1"></i>Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else if (Model.SearchType == "availability" && Model.AvailableVenues != null && !Model.AvailableVenues.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            No venues found for the specified date range.
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const bookingsRadio = document.getElementById('bookingsRadio');
        const availabilityRadio = document.getElementById('availabilityRadio');
        const bookingsSearch = document.getElementById('bookingsSearch');
        const availabilitySearch = document.getElementById('availabilitySearch');
        const searchTypeInput = document.getElementById('searchTypeInput');
        const searchButtonText = document.getElementById('searchButtonText');

        // Set initial state based on model
        const currentSearchType = '@Model.SearchType';
        if (currentSearchType === 'availability') {
            availabilityRadio.checked = true;
            bookingsRadio.checked = false;
            showAvailabilitySearch();
        }

        bookingsRadio.addEventListener('change', function() {
            if (this.checked) {
                showBookingsSearch();
            }
        });

        availabilityRadio.addEventListener('change', function() {
            if (this.checked) {
                showAvailabilitySearch();
            }
        });

        function showBookingsSearch() {
            bookingsSearch.style.display = 'block';
            availabilitySearch.style.display = 'none';
            searchTypeInput.value = 'bookings';
            searchButtonText.textContent = 'Search Bookings';

            // Clear availability search fields
            document.querySelector('input[name="StartDate"]').value = '';
            document.querySelector('input[name="EndDate"]').value = '';
        }

        function showAvailabilitySearch() {
            bookingsSearch.style.display = 'none';
            availabilitySearch.style.display = 'block';
            searchTypeInput.value = 'availability';
            searchButtonText.textContent = 'Check Availability';

            // Clear booking search fields
            document.querySelector('input[name="BookingDate"]').value = '';
            document.querySelector('select[name="Venue_ID"]').value = '';
            document.querySelector('select[name="Event_ID"]').value = '';
            document.querySelector('select[name="EventType_ID"]').value = '';
        }
    });
</script>

<style>
    .search-section {
        transition: all 0.3s ease;
    }

    .availability-status .badge {
        font-size: 0.8rem;
    }

    .card.border-success {
        border-width: 2px !important;
    }

    .card.border-warning {
        border-width: 2px !important;
    }

    .card.border-danger {
        border-width: 2px !important;
    }

    .btn-group .btn-check:checked + .btn {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
        color: white;
    }

    .availability-details {
        font-size: 0.9rem;
    }
</style>