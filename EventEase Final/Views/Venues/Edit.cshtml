@model EventEase_Final.Models.VenueViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Venue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Venue_ID" />
            <div class="form-group">
                <label asp-for="VenueName" class="control-label"></label>
                <input asp-for="VenueName" class="form-control" />
                <span asp-validation-for="VenueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VenueLocation" class="control-label"></label>
                <input asp-for="VenueLocation" class="form-control" />
                <span asp-validation-for="VenueLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VenueCapacity" class="control-label"></label>
                <input asp-for="VenueCapacity" class="form-control" />
                <span asp-validation-for="VenueCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <img class="figure-img rounded h-50 w-50" src="@Html.DisplayFor(m => m.ImageUrl)" alt="@Html.DisplayFor(m => m.VenueName)" />
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
