@model IEnumerable<EventEase_Final.Models.Venue>

@{
    ViewData["Title"] = "Venues Index";
}

<h2>Venues</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle me-1"></i> Create New Venue
    </a>
</p>

<!-- Search Form -->
<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-search me-2"></i>Search Venues</h5>
    </div>
    <div class="card-body">
        <form asp-controller="Venues" asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                        <input type="text" name="searchString" class="form-control" placeholder="Search by venue name or location..." value="@ViewData["CurrentFilter"]" />
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search me-1"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i> Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th><i class="fas fa-building me-1"></i>Venue Name</th>
            <th><i class="fas fa-map-marker-alt me-1"></i>Location</th>
            <th><i class="fas fa-users me-1"></i>Capacity</th>
            <th><i class="fas fa-image me-1"></i>Image</th>
            <th><i class="fas fa-cog me-1"></i>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.VenueName)</strong>
                </td>
                <td>
                    <i class="fas fa-location-dot me-1 text-muted"></i>@Html.DisplayFor(modelItem => item.VenueLocation)
                </td>
                <td>
                    @if (item.VenueCapacity.HasValue)
                    {
                        <span class="badge bg-info">@item.VenueCapacity people</span>
                    }
                    else
                    {
                        <span class="text-muted">Not specified</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.VenueImage))
                    {
                        <img src="@item.VenueImage" alt="@item.VenueName" class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="text-muted text-center" style="width: 80px; height: 60px; border: 1px dashed #ccc; display: flex; align-items: center; justify-content: center; font-size: 12px;">
                            No Image
                        </div>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Venue_ID" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Venue_ID" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Venue_ID" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>
        No venues found. <a asp-action="Create" class="alert-link">Create your first venue</a> to get started.
    </div>
}